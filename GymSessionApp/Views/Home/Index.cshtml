@{
    ViewData["Title"] = "Home - Gym Management System";
}

<link rel="stylesheet" href="~/css/home.css" />

<div class="home-container">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="hero-text">
                <h1>Welcome to Gym Management System</h1>
                <p>Manage your gym sessions, trainers, and schedules all in one place. Streamline your fitness center operations with our comprehensive management solution.</p>
                <div class="hero-actions">
                    <a asp-controller="GymSessions" asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="icon">➕</i> Create New Session
                    </a>
                    <a asp-controller="GymSessions" asp-action="Index" class="btn btn-outline btn-lg">
                        <i class="icon">📋</i> View All Sessions
                    </a>
                </div>
            </div>
            <div class="hero-image">
                <div class="gym-illustration">
                    <div class="gym-icon">🏋️‍♂️</div>
                    <div class="floating-elements">
                        <div class="element element-1">💪</div>
                        <div class="element element-2">⏰</div>
                        <div class="element element-3">🎯</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Statistics Dashboard -->
    <section class="stats-section">
        <h2>Dashboard Overview</h2>
        <div class="stats-grid">
            <div class="stat-card stat-primary">
                <div class="stat-icon">📊</div>
                <div class="stat-content">
                    <h3>@ViewBag.TotalSessions</h3>
                    <p>Total Sessions</p>
                </div>
            </div>
            <div class="stat-card stat-success">
                <div class="stat-icon">✅</div>
                <div class="stat-content">
                    <h3>@ViewBag.ActiveSessions</h3>
                    <p>Active Sessions</p>
                </div>
            </div>
            <div class="stat-card stat-warning">
                <div class="stat-icon">📅</div>
                <div class="stat-content">
                    <h3>@ViewBag.TodaySessions</h3>
                    <p>Today's Sessions</p>
                </div>
            </div>
            <div class="stat-card stat-info">
                <div class="stat-icon">👥</div>
                <div class="stat-content">
                    <h3>@(ViewBag.UpcomingSessions as List<GymSessionApp.Models.GymSession>).Count</h3>
                    <p>Upcoming Sessions</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Actions -->
    <section class="quick-actions-section">
        <h2>Quick Actions</h2>
        <div class="actions-grid">
            <div class="action-card">
                <div class="action-icon">➕</div>
                <h3>Create Session</h3>
                <p>Schedule a new gym session with trainer and timing details</p>
                <a asp-controller="GymSessions" asp-action="Create" class="btn btn-primary">Create Now</a>
            </div>
            <div class="action-card">
                <div class="action-icon">📋</div>
                <h3>Manage Sessions</h3>
                <p>View, edit, or delete existing gym sessions</p>
                <a asp-controller="GymSessions" asp-action="Index" class="btn btn-secondary">Manage Sessions</a>
            </div>
            <div class="action-card">
                <div class="action-icon">🔍</div>
                <h3>Search Sessions</h3>
                <p>Find specific sessions by name, trainer, or date</p>
                <a asp-controller="GymSessions" asp-action="Index" class="btn btn-info">Search Now</a>
            </div>
        </div>
    </section>

    <!-- Upcoming Sessions -->
    @if (ViewBag.UpcomingSessions != null && ((List<GymSessionApp.Models.GymSession>)ViewBag.UpcomingSessions).Any())
    {
        <section class="upcoming-section">
            <h2>Upcoming Sessions</h2>
            <div class="sessions-list">
                @foreach (var session in (List<GymSessionApp.Models.GymSession>)ViewBag.UpcomingSessions)
                {
                    <div class="session-card">
                        <div class="session-time">
                            <div class="time">@session.StartTime.ToString("HH:mm")</div>
                            <div class="date">@session.StartTime.ToString("MMM dd")</div>
                        </div>
                        <div class="session-details">
                            <h4>@session.SessionName</h4>
                            <p><i class="icon">👤</i> @session.TrainerName</p>
                            <p><i class="icon">👥</i> Capacity: @session.Capacity</p>
                        </div>
                        <div class="session-actions">
                            <a asp-controller="GymSessions" asp-action="Details" asp-route-id="@session.Id" class="btn btn-sm btn-outline">View</a>
                        </div>
                    </div>
                }
            </div>
            <div class="view-all">
                <a asp-controller="GymSessions" asp-action="Index" class="btn btn-link">View All Sessions →</a>
            </div>
        </section>
    }

    <!-- Features Section -->
    <section class="features-section">
        <h2>System Features</h2>
        <div class="features-grid">
            <div class="feature-item">
                <div class="feature-icon">⚡</div>
                <h4>Easy Management</h4>
                <p>Intuitive interface for managing all your gym sessions efficiently</p>
            </div>
            <div class="feature-item">
                <div class="feature-icon">🔍</div>
                <h4>Smart Search</h4>
                <p>Quickly find sessions by trainer name, session type, or date</p>
            </div>
            <div class="feature-item">
                <div class="feature-icon">📊</div>
                <h4>Real-time Stats</h4>
                <p>Monitor your gym operations with live statistics and insights</p>
            </div>
            <div class="feature-item">
                <div class="feature-icon">📱</div>
                <h4>Responsive Design</h4>
                <p>Access your gym management system from any device, anywhere</p>
            </div>
            <div class="feature-item">
                <div class="feature-icon">🔒</div>
                <h4>Secure Access</h4>
                <p>User authentication and role-based access control</p>
            </div>
            <div class="feature-item">
                <div class="feature-icon">⏰</div>
                <h4>Time Management</h4>
                <p>Efficient scheduling with conflict detection and validation</p>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="cta-section">
        <div class="cta-content">
            <h2>Ready to Get Started?</h2>
            <p>Transform your gym management experience today!</p>
            <a asp-controller="GymSessions" asp-action="Create" class="btn btn-primary btn-lg">Create Your First Session</a>
        </div>
    </section>
</div>